<!DOCTYPE html>

<c:set var="colorValue" value="black">
	<c:choose>
		<c:when test="${colorValue eq 'r' }">
			<c:set var="colorValue2" value="red"></c:set>
		</c:when>
		
		<c:when test="${colorValue eq 'b' }">
			<c:set var="colorValue2" value="blue"></c:set>
		</c:when>
		<c:when test="${colorVlaue eq 'g' }">
			<c:set var="colorValue2" value="green"></c:set>
		</c:when>
	</c:choose>
</c:set>
<html>
	<head>
		<meta charset="UTF-8">
		<title>JSTL</title>
		<style>
			span{
			color: ${colorValue};
			}
		</style>
	</head>
	<body>
	
